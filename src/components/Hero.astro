---
import { basics } from '@/cv.json';
import Section from '@/components/Section.astro';
import LinkIcon from '@/components/LinkIcon.astro';
import Mail from '@/icons/Mail.astro';
import Location from '@/icons/Location.astro';
import Phone from '@/icons/Phone.astro';

const { profiles } = basics;
const ICON_SIZE = 20;
---

<Section title="">
    <div class="flex flex-col-reverse sm:flex-row gap-2 justify-between items-center">
        <div class="flex flex-col gap-2">
            <h1 class="font-bold text-2xl">{basics.name}</h1>
            <h2 class="font-medium text-base text-center sm:text-left text-neutral-500">{basics.label}</h2>
            <span class="text-sm flex gap-1">
                <Mail size={ICON_SIZE} />
                {basics.email}
            </span>
            <span class="text-sm flex gap-1">
                <Phone size={ICON_SIZE} />
                {basics.phone}
            </span>
            <span class="text-sm flex gap-1">
                <Location size={ICON_SIZE} />
                {basics.location.city}, {basics.location.region}
            </span>
            {
                profiles.map((p) => (
                    <LinkIcon
                        url={p.url}
                        network={p.network}
                        username={p.username}
                        size={ICON_SIZE}
                    />
                ))
            }
        </div>
        <figure class="w-36">
            <img class="rounded-md" src={basics.image} alt="profile" />
        </figure>
    </div>
</Section>
