---
import { basics } from "@/cv.json";
import Section from "@/components/Section.astro";
import LinkIcon from "@/components/LinkIcon.astro";
import Mail from "@/icons/Mail.astro";
import Location from "@/icons/Location.astro";
import Phone from "@/icons/Phone.astro";

const { profiles } = basics;
---

<Section title="">
    <div class="flex gap-28 justify-between items-center">
        <div class="flex flex-col gap-2">
            <h1 class="font-semibold text-2xl">{basics.name}</h1>
            <h2 class="text-lg">{basics.label}</h2>
            <span class="text-sm flex gap-1">
                <Mail size={20} />
                {basics.email}
            </span>
            <span class="text-sm flex gap-1">
                <Phone size={20} />
                {basics.phone}
            </span>
            <span class="text-sm flex gap-1">
                <Location size={20} />
                {basics.location.city}, {basics.location.region}
            </span>
            {
                profiles.map((p) => (
                    <LinkIcon
                        url={p.url}
                        network={p.network}
                        username={p.username}
                    />
                ))
            }
        </div>
        <figure class="w-36 mr-8">
            <img class="rounded-md" src={basics.image} alt="profile" />
        </figure>
    </div>
</Section>
